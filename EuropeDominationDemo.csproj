<Project Sdk="Godot.NET.Sdk/4.3.0">
    <PropertyGroup>
        <TargetFramework>net6.0</TargetFramework>
        <EnableDynamicLoading>true</EnableDynamicLoading>
    </PropertyGroup>
    <ItemGroup>
        <Compile Remove="Scripts\GUI\**"/>
    </ItemGroup>
    <ItemGroup>
        <EmbeddedResource Remove="Scripts\GUI\**"/>
    </ItemGroup>
    <ItemGroup>
        <Folder Include="Scripts\UI\GUIPrefabs\"/>
        <Folder Include="Scripts\Units\"/>
    </ItemGroup>
    <ItemGroup>
        <Content Include="Scripts\EuropeDomination.drawio"/>
    </ItemGroup>
     <ItemGroup>
    <!-- Steamworks.NET -->
    <Reference Include="Steamworks.NET, Version=20.2.0, Culture=neutral, processorArchitecture=MSIL">
      <SpecificVersion>False</SpecificVersion>
      <Link>Steamworks.NET.dll</Link>
      <HintPath Condition=" '$(OS)' == 'Windows_NT' ">Libraries/Steamworks/Windows-x64/Steamworks.NET.dll</HintPath>
      <HintPath Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))'">Libraries/Steamworks/OSX-Linux-x64/Steamworks.NET.dll</HintPath>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Reference>
  
    <Content Include="Steamworks/OSX-Linux-x64/steam_api.bundle/Contents/MacOS/libsteam_api.dylib" Condition="'$([System.Runtime.InteropServices.RuntimeInformation]::IsOSPlatform($([System.Runtime.InteropServices.OSPlatform]::OSX)))'">
      <Link>libsteam_api.dylib</Link>
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <!-- /Steamworks.NET -->
  </ItemGroup>

</Project>